<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/peakpx"
    tools:context=".activity.HomeActivity"
    android:id="@+id/base">

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="116dp"
        android:layout_height="126dp"
        android:layout_below="@id/base"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/baseline_person_24"
        tools:ignore="NotSibling"
        android:contentDescription="User image" />

    <TextView
        android:id="@+id/textName"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/base"
        android:layout_toEndOf="@+id/imageUser"
        android:background="@drawable/borders_text"
        android:text="Nome do Usuário"
        android:padding="5dp"
        android:textColor="@color/black"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/textEmail"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textName"
        android:layout_toEndOf="@+id/imageUser"
        android:background="@drawable/borders_text"
        android:text="Nome do Usuário"
        android:padding="5dp"
        android:textColor="@color/black"
        tools:ignore="NotSibling" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginHorizontal="10dp"
        android:id="@+id/updateButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEmail"
        android:layout_marginTop="50dp"
        android:text="Atualizar"
        android:background="#0F658C"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteButton"
        android:layout_marginHorizontal="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEmail"
        android:layout_toEndOf="@id/updateButton"
        android:layout_marginTop="50dp"
        android:text="Deletar"
        android:background="#7E1A1A"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="133dp"
        android:layout_marginBottom="12dp"
        android:text="Sair da Conta"
        android:textColor="@color/white"
        android:background="#3C3D79"/>
</RelativeLayout>

